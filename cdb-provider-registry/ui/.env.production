
VITE_API_BASE_URL=https://cdb.platformcommons.org/cdb-api-gateway/

# Authentication mode: 'oauth2' (default) or 'direct'
VITE_AUTH_MODE=oauth2

# CDB Auth Registry base URL (used for OAuth2 authorize/token)
VITE_CDB_AUTH_URL=https://cdb-auth.platformcommons.org

# Explicit public redirect URI to avoid localhost/base mismatches behind Nginx
VITE_PUBLIC_REDIRECT_URI=https://cdb.platformcommons.org/provider-registry/auth/callback

# OAuth2 client ID for Provider Registry UI
VITE_OAUTH_CLIENT_ID=cdb_provider_registry
